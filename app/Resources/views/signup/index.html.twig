                        <select name="nationality" placeholder="Nationality" class="form-control">
                            <option>option 1</option>
                        </select>
                    </div>
                    <div class="col-sm-6 inline-input">
                        <select name="nationality" placeholder="Nationality" class="form-control">
                            <option>option 1</option>
                        </select>
                    </div>
                </div>

                <div class="form-group" style="text-align: right">
                    <div class="col-sm-8">
                        <span>
                            By clicking on "Create Account" you agree to the <a style="text-decoration: underline;">Terms of use</a> and <a style="text-decoration: underline;">Privacy Policy</a>
                        </span>
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn-sm btn-default btn-rounded">Create Account</button>
                    </div>
                </div>

            </div>
        </div>
    </form>

</div>
