{% extends 'base.html.twig' %}

{% block title %}Tipmytip - My Profile{% endblock %}

{% block body %}
    <h1>My Profile</h1>
    
     <table>
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ user.birthdate }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ user.gender }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ user.nationality }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ user.country }}</td>
            </tr>
        </tbody>
    </table>
    
    <ul>
    	<li>
            <a href="{{ path('my_profile_edit', { 'id': user.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
